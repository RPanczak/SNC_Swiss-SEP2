@article{ArhabJ.Environ.PublicHealth2018,
  title = {Childcare Correlates of Physical Activity, Sedentary Behavior, and Adiposity in Preschool Children: {{A}} Cross-Sectional Analysis of the {{SPLASHY}} Study},
  author = {Arhab, Amar and Messerli-Bürgy, Nadine and Kakebeeke, Tanja H. and Lanzi, Stefano and Stülb, Kerstin and Zysset, Annina E. and Leeger-Aschmann, Claudia S. and Schmutz, Einat A. and Meyer, Andrea H. and Munsch, Simone and Kriemler, Susi and Jenni, Oskar G. and Puder, Jardena J.},
  date = {2018},
  journaltitle = {Journal of Environmental and Public Health},
  volume = {2018},
  pages = {1--12},
  issn = {1687-9805},
  doi = {10.1155/2018/9157194},
  url = {https://www.hindawi.com/journals/jeph/2018/9157194/},
  abstract = {{$<$}p{$>$} {$<$}italic{$>$}Background{$<$}/italic{$>$} . The childcare (CC) environment can influence young children's physical activity (PA), sedentary behavior (SB), and adiposity. The aim of the study was to identify a broad range of CC correlates of PA, SB, and adiposity in a large sample of preschoolers. {$<$}italic{$>$}Methods{$<$}/italic{$>$} . 476 preschool children (mean age 3.9 yrs; 47\% girls) participated in the Swiss Preschoolers' Health Study (SPLASHY). PA and SB were measured by accelerometry. Outcome measures included total PA (TPA), moderate-to-vigorous PA (MVPA), SB, body mass index (BMI), and skinfold thickness (SF). PA measures consisted of both daily PA during CC attendance days and overall daily PA (CC and non-CC days). {$<$}italic{$>$}Results{$<$}/italic{$>$} . We identified the following CC correlates for higher TPA and/or higher MVPA or lower SB during CC attendance days: older age, sex (boys), more frequent child-initiated interactions during CC, mixing different ages within a group, and the presence of a written PA policy in the CC (all {$<$}math id="M1"{$>$} {$<$}mrow{$>$} {$<$}mi{$>$}p{$<$}/mi{$>$} {$<$}mo{$>$}≤{$<$}/mo{$>$} {$<$}mn{$>$}0.02{$<$}/mn{$>$} {$<$}/mrow{$>$} {$<$}/math{$>$} ). The CC correlates for overall TPA and/or MVPA or lower overall SB including both CC and non-CC days were the following: older age, sex (boys), more frequent child-initiated interactions during CC, mixing different ages within a group, less parental PA involvement in the CC, and having a larger surface area in CC (all {$<$}math id="M2"{$>$} {$<$}mrow{$>$} {$<$}mi{$>$}p{$<$}/mi{$>$} {$<$}mo{$>$}≤{$<$}/mo{$>$} {$<$}mn{$>$}0.046{$<$}/mn{$>$} {$<$}/mrow{$>$} {$<$}/math{$>$} ). Correlates for lower SF were sex (boys) and parental PA involvement in the CC (all {$<$}math id="M3"{$>$} {$<$}mrow{$>$} {$<$}mi{$>$}p{$<$}/mi{$>$} {$<$}mo{$>$}≤{$<$}/mo{$>$} {$<$}mn{$>$}0.02{$<$}/mn{$>$} {$<$}/mrow{$>$} {$<$}/math{$>$} ), and, for lower BMI, only increased age ( {$<$}math id="M4"{$>$} {$<$}mrow{$>$} {$<$}mi{$>$}p{$<$}/mi{$>$} {$<$}mo{$>$}={$<$}/mo{$>$} {$<$}mn{$>$}0.001{$<$}/mn{$>$} {$<$}/mrow{$>$} {$<$}/math{$>$} ) was a correlate. {$<$}italic{$>$}Conclusions{$<$}/italic{$>$} . More frequent child-initiated interactions and mixing different ages in CC, the presence of a written PA policy, and a larger CC surface are correlates of PA and SB during CC attendance days and/or of overall PA. Parental involvement in CC PA projects was a correlate for reduced body fat. These novel factors are mostly modifiable and can be tackled/addressed in future interventions. {$<$}/p{$>$}},
  issue = {Cc}
}

@article{Arribas-Bel2017,
