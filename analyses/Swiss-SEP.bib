  author = {Moser, André and Panczak, Radoslaw and Zwahlen, Marcel and Clough-Gorr, Kerri M. and Spoerri, Adrian and Stuck, Andreas E. and Egger, Matthias},
  date = {2014-12-01},
  journaltitle = {J Epidemiol Community Health},
  shortjournal = {J Epidemiol Community Health},
  volume = {68},
  number = {12},
  eprint = {25124188},
