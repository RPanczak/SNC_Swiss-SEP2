}

@article{GuillaumeJEpidemiolCommunityHealth2016,
  title = {Development of a Cross-Cultural Deprivation Index in Five {{European}} Countries},
  author = {Guillaume, Elodie and Pornet, Carole and Dejardin, Olivier and Launay, Ludivine and Lillini, Roberto and Vercelli, Marina and Marí-Dell'Olmo, Marc and Fontelo, Amanda Fernández and Borrell, Carme and Ribeiro, Ana Isabel and de Pina, Maria Fatima and Mayer, Alexandra and Delpierre, Cyrille and Rachet, Bernard and Launoy, Guy},
