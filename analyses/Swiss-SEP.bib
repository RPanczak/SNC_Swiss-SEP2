@article{MeijerScandJPublicHealth2013,
  title = {A Socioeconomic Deprivation Index for Small Areas in {{Denmark}}},
  author = {Meijer, Mathias and Engholm, Gerda and Grittner, Ulrike and Bloomfield, Kim},
  date = {2013-08-01},
  journaltitle = {Scandinavian Journal of Public Health},
  shortjournal = {Scand J Public Health},
  volume = {41},
  pages = {560--569},
  publisher = {{SAGE Publications Ltd STM}},
