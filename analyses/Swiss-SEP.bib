  author = {Kivimäki, Mika and Batty, G. David and Pentti, Jaana and Shipley, Martin J. and Sipilä, Pyry N. and Nyberg, Solja T. and Suominen, Sakari B. and Oksanen, Tuula and Stenholm, Sari and Virtanen, Marianna and Marmot, Michael G. and Singh-Manoux, Archana and Brunner, Eric J. and Lindbohm, Joni V. and Ferrie, Jane E. and Vahtera, Jussi},
