@article{Scepanovic2015,
  title = {Mobile Phone Call Data as a Regional Socio-Economic Proxy Indicator},
  author = {Šćepanović, Sanja and Mishkovski, Igor and Hui, Pan and Nurminen, Jukka K. and Ylä-Jääski, Antti},
