  title = {Socioeconomic and Demographic Disparities in Breast Cancer Stage at Presentation and Survival: {{A Swiss}} Population-Based Study},
  shorttitle = {Socioeconomic and Demographic Disparities in Breast Cancer Stage at Presentation and Survival},
  author = {Feller, Anita and Schmidlin, Kurt and Bordoni, Andrea and Bouchardy, Christine and Bulliard, Jean-Luc and Camey, Bertrand and Konzelmann, Isabelle and Maspoli, Manuela and Wanner, Miriam and Clough‐Gorr, Kerri M.},
  date = {2017},
  journaltitle = {International Journal of Cancer},
