@article{ForasterEnviron.Int.2016,
  title = {Long-Term Transportation Noise Annoyance Is Associated with Subsequent Lower Levels of Physical Activity},
  author = {Foraster, Maria and Eze, Ikenna C. and Vienneau, Danielle and Brink, Mark and Cajochen, Christian and Caviezel, Seraina and Héritier, Harris and Schaffner, Emmanuel and Schindler, Christian and Wanner, Miriam and Wunderli, Jean Marc and Röösli, Martin and Probst-Hensch, Nicole},
