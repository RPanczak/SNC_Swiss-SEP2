@article{LupatschEur.J.Epidemiol.2015,
  title = {Population Mixing and the Risk of Childhood Leukaemia in {{Switzerland}}: A Census-Based Cohort Study},
  author = {Lupatsch, Judith E. and Kuehni, Claudia E. and Niggli, Felix and Ammann, Roland A. and Egger, Matthias and Spycher, Ben D.},
