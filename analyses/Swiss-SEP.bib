  author = {Kreis, Christian and Lupatsch, Judith E. and Niggli, Felix and Egger, Matthias and Kuehni, Claudia E. and Spycher, Ben D. and Ammann, R. A. and Angst, R. and Ansari, M. and Beck Popovic, M. and Bergstraesser, E. and Brazzola, P. and Greiner, J. and Grotzer, M. and Hengartner, H. and Kuehne, T. and Kuehni, C. and Leibundgut, K. and Niggli, F. and Rischewski, J. and Von Der Weid, N. and Egger, M. and Spoerri, A. and Zwahlen, M. and Puhan, M. and Bopp, M. and F??h, D. and K??nzli, N. and Paccaud, F. and Oris, M. and Schwyn, M.},
  date = {2017},
